{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2020",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"types": ["svelte", "node"],
		"paths": {
			"obsidian": [
				"./tests/obsidian-stub",
				"./node_modules/obsidian"
			]
		},
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"experimentalDecorators": true
	},
	"include": ["**/*.ts"]
}
