{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2020",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"types": ["node", "svelte", "obsidian"],
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"experimentalDecorators": true,
		"paths": {
			"obsidian": ["node_modules/obsidian/dist/obsidian.d.ts"],
			"svelte": ["node_modules/svelte/types/runtime/index.d.ts"]
		}
	},
	"include": ["**/*.ts"]
}
