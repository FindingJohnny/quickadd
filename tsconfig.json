{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"],
			"@engine/*": ["src/engine/*"],
			"@template/*": ["src/template-engine/*"]
		},
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2020",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"types": ["svelte", "node", "vitest"],
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7", "ES2020"],
		"experimentalDecorators": true
	},
	"include": ["**/*.ts"]
}
