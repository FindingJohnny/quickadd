{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2020",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"types": ["node", "svelte"],
		"strictNullChecks": true,
		"lib": ["DOM", "ES2017", "ES2020"],
		"experimentalDecorators": true,
		"paths": {
			"obsidian": ["node_modules/obsidian/dist/obsidian.d.ts"]
		},
		"skipLibCheck": true,
		"esModuleInterop": true
	},
	"include": ["**/*.ts"]
}
